@model DAL.Models.Entities.Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>Product Details</h2>

<div class="card mb-3" style="max-width: 900px;">
    <div class="row g-0">
        <div class="col-md-4">
            <!-- Product Image with larger size -->
            <img src="~/@Model.ImageURL" alt="@Model.Name" class="img-fluid rounded-start" style="max-height: 400px; object-fit: cover;">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text"><strong>Description:</strong> @Model.Description</p>
                <p class="card-text"><strong>Price:</strong> $@Model.Price</p>
                <p class="card-text"><strong>Category:</strong> @Model.Category.CategoryName</p>
                <p class="card-text"><strong>Available:</strong> @(Model.IsAvailable ? "Yes" : "No")</p>
                <div>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@Model.ProductId" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>
